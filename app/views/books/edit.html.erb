<h1>Editing Book</h1>
<!-- form_with部分 -->
<%= form_with model:@book, local: true do |f| %>
  <% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@book.errors.count, "error") %>prohibited this product form being saved:</h2>

    <ul>
      <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
    </ul>
  </div>
  <% end %>
<% end %>

<% form_with madel:@book, url:book_path(@book) %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
<% end %>

<div class="link">
    <%= link_to "Show" ,book_path(@book.id) %>
    <%= " | " %>
    <%= link_to "Back", books_path %>
</div>